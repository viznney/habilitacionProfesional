<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="entidades.EstadoUsuario" table="estadousuario">
      <id name="OID" type="string">
            <column name="OIDEstadoUsuario"/>
            <generator class="uuid2"/>
        </id>

        <property name="codEstadoUsuario" type="int">
            <column name="codEstadoUsuario"/>
        </property>

        <property name="nombreEstadoUsuario" type="string">
            <column name="nombreEstadoUsuario"/>
        </property>

    </class>
  
</hibernate-mapping>
